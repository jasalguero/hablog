# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
#GET     /                            controllers.Application.index()

GET     /blog                         controllers.Application.all()

GET     /blog/:id                     controllers.Application.blog(id: String)

POST    /blog                         controllers.Application.createBlog()

#POST     /blog/:id/comment/*ids       controllers.Application.addComment(id: String, ids: String)


# Map static resources from the /public folder to the /assets URL path
#GET     /assets/*file               controllers.Assets.at(path="/public", file)
